# ========================================
# DATABASE CONFIGURATION
# ========================================
PGUSER=postgres
PGHOST=localhost
PGDATABASE=brainywrite_db
PGPASSWORD=your_postgres_password_here
PGPORT=5432

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ========================================
# EMAIL CONFIGURATION (Gmail)
# ========================================
# Para configurar:
# 1. Ative a autenticação de 2 fatores no Gmail
# 2. Gere uma senha de app em: https://myaccount.google.com/apppasswords
# 3. Substitua os valores abaixo

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu-email@gmail.com
EMAIL_PASS=sua-senha-de-app-do-gmail-aqui
EMAIL_FROM=brainywriteconsultoria@gmail.com
ADMIN_EMAIL=brainywriteconsultoria@gmail.com

# ========================================
# JWT SECRET (NÃO COMPARTILHE ESTE VALOR!)
# ========================================
# Gere um novo com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-here-generate-a-new-one

# ========================================
# API BASE URL (Frontend)
# ========================================
VITE_API_URL=http://localhost:5000/api
VITE_API_BASE_URL=http://localhost:5000/api
