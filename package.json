{
  "name": "brainywrite",
  "private": true,
  "version": "1.0.0",
  "description": "Website moderno e futurístico para consultoria acadêmica e profissional em Moçambique - BrainyWrite",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "create-admin": "node database/create-admin.js",
    "db:init": "psql -U postgres -c \"CREATE DATABASE brainywrite_db;\" && psql -U postgres -d brainywrite_db -f database/schema.sql",
    "db:reset": "psql -U postgres -c \"DROP DATABASE IF EXISTS brainywrite_db;\" && npm run db:init",
    "setup": "npm install && npm run db:init && npm run create-admin",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "clean": "rmdir /s /q dist node_modules 2>nul || rm -rf dist node_modules",
    "type-check": "tsc -b --noEmit"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.16",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "emailjs-com": "^3.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "framer-motion": "^12.23.24",
    "gsap": "^3.13.0",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.548.0",
    "nodemailer": "^6.9.16",
    "particles.js": "^2.0.0",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.5.1",
    "swagger-ui-express": "^5.0.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.23",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.38.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^2.1.0"
  }
}
